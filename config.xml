<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Peek</name>
  <description>
    A simple app that is used to interact with the peeK website soley for locking and unlocking the house.
  </description>
  <author email="ngsellek@gmail.com" href="http://cordova.io">
    Nichoals Sellek
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <allow-navigation href='https://boiling-everglades-46119.herokuapp.com/*' />
  <allow-navigation href='http://localhost:3000/*' />

  <!-- allows use of camera -->
  <feature name="Camera">
    <param name="ios-package" value="CDVCamera" />
  </feature>
</widget>
